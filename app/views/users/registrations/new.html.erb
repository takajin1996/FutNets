<h2>ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label 'メールアドレス' %><br />
    <%= f.email_field :email, placeholder:'example@gmail.com',autofocus: true %>
  </div>

  <div class="field">
    <%= f.label 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: '半角英数',autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード(もう一度)' %><br />
    <%= f.password_field :password_confirmation,placeholder: '半角英数', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "サインアップ" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
