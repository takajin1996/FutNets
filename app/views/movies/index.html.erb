<p id="notice"><%= notice %></p>

<h2>動画</h2>

<div class="movie-list">
    <% @movies.each do |movie| %>
      <div class="crud">
        <span class="title"><%= link_to movie.title, movie %></span>
        <span><%= link_to '編集', edit_movie_path(movie) %></span>
        <span><%= link_to '消す', movie, method: :delete, data: { confirm: 'Are you sure?' } %></span>
      </div>
    <% end %>
</div>
<br>

